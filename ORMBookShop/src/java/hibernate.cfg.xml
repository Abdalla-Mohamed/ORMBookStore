<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.OracleDialect</property>
    <property name="hibernate.connection.driver_class">oracle.jdbc.OracleDriver</property>
    <property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521:XE</property>
    <property name="hibernate.connection.username">bookstore</property>
    <property name="hibernate.connection.password">bookdb</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.format_sql">true</property>
    <mapping class="com.beans.Category"/>
    <mapping class="com.beans.ChargingCard"/>
    <mapping class="com.beans.OrderBook"/>
    <mapping class="com.beans.CartId"/>
    <mapping class="com.beans.Book"/>
    <mapping class="com.beans.Orders"/>
    <mapping class="com.beans.Cart"/>
    <mapping class="com.beans.Customer"/>
    <mapping class="com.beans.Author"/>
  </session-factory>
</hibernate-configuration>
